<Page
    x:Class="ProyectoOT.View.TaskListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoOT.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    
    <Grid Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button x:Name="Back" Style="{StaticResource NavigationBackButtonNormalStyle}" Margin="50"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <ListView x:ConnectionId='1' Name="listaTareas"                                                >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding id }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding nombre }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding modelo }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding serial }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding horometroInicial }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding horometroFinal }"
                                           Margin="10"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           Foreground="DarkBlue"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </StackPanel>
    </Grid>
    
    
</Page>


<Page
    x:Class="ProyectoOT.Vista.VistaPrincipal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoOT.Vista"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <!--
       contenedor principal de toda la página
        -->
    <ScrollViewer>
        <StackPanel >
            <!--
            contenedor que permite darle formato a los bordes de la página
            -->
            <Border Background="Wheat" BorderBrush="Blue" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Image Source="ms-appx:///Imagenes/descarga.jpg" Width="200" Height="50" Margin="20"/>
                        <TextBlock Text="Orden de Trabajo" FontSize="50" Foreground="Black" Margin="390,20,0,0" HorizontalAlignment="Center"/>
                        <!-- <TextBox Name="correlativo" Text="00001" IsReadOnly="True" Width="100" Height="30" Margin="300,0,0,0" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right"/> -->
                    </StackPanel>
                    <!--
                            primera sección de la página que contiene la información de la detención
                        -->
                    <StackPanel Grid.Row="1">
                        <StackPanel>
                            <Border BorderThickness="3" BorderBrush="Black">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <!--
                                        stackpanel que contiene "información de detención"
                                    -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,0">
                                        <TextBlock Text="Información de detención" FontSize="30" HorizontalAlignment="Center" Foreground="Black"/>
                                    </StackPanel>
                                    <!--
                                        stackpanel que contiene los datos de la detención
                                    -->
                                    <StackPanel Grid.Row="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <!--
                                                columna que contiene información del equipo
                                            -->
                                            <StackPanel Grid.Column="0">
                                                <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,2.5,0">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="17*"/>
                                                            <RowDefinition Height="34*"/>
                                                            <RowDefinition Height="24*"/>
                                                        </Grid.RowDefinitions>
                                                        <!--
                                                                nombre de la sección
                                                            -->
                                                        <StackPanel Grid.Row="0" Margin="0,0,0,0">
                                                            <TextBlock Text="Equipo" FontSize="14" Foreground="Black"/>
                                                        </StackPanel>
                                                        <!--
                                                                contiene la info de Equipo 
                                                            -->
                                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition/>
                                                                    <RowDefinition/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>

                                                                <!--
                                                                    contiene el texto Equipo
                                                                    -->
                                                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,10,0,0">
                                                                    <TextBlock Text="Equipo" FontSize="15" Foreground="Black" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                </StackPanel>
                                                                <!--
                                                                    contiene el combobox del equipo
                                                                    -->
                                                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                                                    <ComboBox x:ConnectionId='33' x:Name="comboboxEquipo" Width="100" Height="30"  Margin="34,0"                                                                                   />
                                                                </StackPanel>
                                                                <!--
                                                                        contiene la etiqueta Modelo con su texbox
                                                                    -->
                                                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
                                                                    <TextBlock Text="Modelo" FontSize="15" Foreground="Black" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                </StackPanel>
                                                                <!--
                                                                    contiene el textbox de modelo
                                                                -->
                                                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                                                                    <TextBox Name="texboxModelo" Width="100" Height="30" IsReadOnly="True"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                        <!--
                                                            Contiene la sección de horometro
                                                        -->
                                                        <StackPanel Grid.Row="2" Margin="0,10,0,25">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition/>
                                                                    <RowDefinition/>
                                                                    <RowDefinition/>
                                                                </Grid.RowDefinitions>
                                                                <!--
                                                                    contiene etiqueta "Horometro"
                                                                -->
                                                                <StackPanel Grid.Row="0" Margin="0,10,0,10">
                                                                    <TextBlock Text="Horómetro" FontSize="14" Foreground="Black"  Margin="150,0,0,0" FontWeight="Bold"/>
                                                                </StackPanel>
                                                                <!--
                                                                    contiene horómetro inicial
                                                                -->
                                                                <StackPanel Grid.Row="1" Margin="0,0,0,5">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="80"/>
                                                                            <ColumnDefinition Width="2*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                                                            <TextBlock Text="Inicial" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Column="1" Margin="0,0,0,0">
                                                                            <TextBox Name="TexboxHorometroInicial" Width="200" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                                <!--
                                                                    contiene horómetro final
                                                                -->
                                                                <StackPanel Grid.Row="2" Margin="0,5,0,0">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="80"/>
                                                                            <ColumnDefinition Width="2*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <StackPanel Grid.Column="0">
                                                                            <TextBlock Text="Final" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Column="1" Margin="0,0,0,33">
                                                                            <TextBox x:Name="TextboxHorometroFinal" Width="200" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>

                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                            <!--
                                                columna que contiene información de la fecha de la detención
                                            -->
                                            <StackPanel Grid.Column="1">
                                                <Border BorderBrush="Black" BorderThickness="1" Margin="2.5,0,2.5,0">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <!--
                                                                contiene etiqueta de "detención"
                                                            -->
                                                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                                            <TextBlock Text="Detención" Foreground="Black" FontSize="14"/>
                                                        </StackPanel>
                                                        <!--
                                                                Fecha inicial de detanción
                                                            -->
                                                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <!--
                                                                        columna de la fecha
                                                                    -->
                                                                <StackPanel Grid.Column="0">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <!--
                                                                                etiqueta de fecha de inicio
                                                                            -->
                                                                        <StackPanel Grid.Row="0">
                                                                            <TextBlock Text="Fecha inicio" Foreground="Black" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                        </StackPanel>
                                                                        <!--
                                                                                nombre campos
                                                                            -->
                                                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                                            <TextBlock Text="Mes" Foreground="Black" FontSize="14" Margin="80,0,0,0" HorizontalAlignment="Left"/>
                                                                            <TextBlock Text="Día" Foreground="Black" FontSize="14" Margin="90,0,0,0" HorizontalAlignment="Center"/>
                                                                            <TextBlock Text="Año" Foreground="Black" FontSize="14" Margin="80,0,0,0" HorizontalAlignment="Right"/>
                                                                        </StackPanel>
                                                                        <!--
                                                                                control de fechas
                                                                            -->
                                                                        <StackPanel Grid.Row="2">
                                                                            <DatePicker HorizontalAlignment="Center" Name="fechaInicial" MonthFormat="{}{month.integer}"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                                <!--
                                                                        columna de la hora
                                                                    -->
                                                                <StackPanel Grid.Column="1">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <!--
                                                                                etiqueta de la hora de inicio
                                                                            -->
                                                                        <StackPanel Grid.Row="0">
                                                                            <TextBlock Text="Hora inicio" Foreground="Black" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                                            <TextBlock Text="Hora" FontSize="14" Foreground="Black" Margin="150,0,0,0"/>
                                                                            <TextBlock Text="Minutos" FontSize="14" Foreground="Black" Margin="30,0,0,0"/>
                                                                        </StackPanel>
                                                                        <!--
                                                                                control de hora
                                                                            -->
                                                                        <StackPanel Grid.Row="2">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <StackPanel Grid.Column="0">
                                                                                    <ComboBox x:ConnectionId='32' Name="horaInicial" Width="50" HorizontalAlignment="Right" Margin="0,0,5,0"                             />
                                                                                </StackPanel>
                                                                                <StackPanel Grid.Column="1">
                                                                                    <ComboBox x:ConnectionId='31' Name="minutoInicial" Width="50" HorizontalAlignment="Left" Margin="5,0,0,0"                               />
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                        <!--
                                                                Fecha final de detención
                                                            -->
                                                        <StackPanel Grid.Row="2" Margin="0,15,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <!--
                                                                        columna de la fecha
                                                                    -->
                                                                <StackPanel Grid.Column="0">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <!--
                                                                                etiqueta de fecha de inicio
                                                                            -->
                                                                        <StackPanel Grid.Row="0">
                                                                            <TextBlock Text="Fecha término" Foreground="Black" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                        </StackPanel>

                                                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                                            <TextBlock Text="Mes" Foreground="Black" FontSize="14" Margin="80,0,0,0" HorizontalAlignment="Left"/>
                                                                            <TextBlock Text="Día" Foreground="Black" FontSize="14" Margin="90,0,0,0" HorizontalAlignment="Center"/>
                                                                            <TextBlock Text="Año" Foreground="Black" FontSize="14" Margin="80,0,0,0" HorizontalAlignment="Right"/>
                                                                        </StackPanel>
                                                                        <!--
                                                                                control de fechas
                                                                            -->
                                                                        <StackPanel Grid.Row="2">
                                                                            <DatePicker Name="FechaFinal" HorizontalAlignment="Center" MonthFormat="{}{month.integer}"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                                <!--
                                                                        columna de la hora
                                                                    -->
                                                                <StackPanel Grid.Column="1">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <!--
                                                                                etiqueta de la hora de inicio
                                                                            -->
                                                                        <StackPanel Grid.Row="0">
                                                                            <TextBlock Text="Hora término" Foreground="Black" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                                        </StackPanel>
                                                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                                            <TextBlock Text="Hora" FontSize="14" Foreground="Black" Margin="150,0,0,0"/>
                                                                            <TextBlock Text="Minutos" FontSize="14" Foreground="Black" Margin="30,0,0,0"/>
                                                                        </StackPanel>
                                                                        <!--
                                                                                control de hora
                                                                            -->
                                                                        <StackPanel Grid.Row="2">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <StackPanel Grid.Column="0">
                                                                                    <ComboBox x:ConnectionId='30' Name="horaFinal" Width="50" HorizontalAlignment="Right" Margin="0,0,5,0"                          />
                                                                                </StackPanel>
                                                                                <StackPanel Grid.Column="1">
                                                                                    <ComboBox x:ConnectionId='29' Name="minutoFinal" Width="50" HorizontalAlignment="Left" Margin="5,0,0,0"                             />
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Grid>
                                                        </StackPanel>
                                                        <!--
                                                                Tipo de detención
                                                            -->
                                                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,30,0,29">
                                                            <RadioButton Name="Programada" Content="Programada" Foreground="Black" FontSize="14" Margin="70,0,0,0"/>
                                                            <RadioButton Name="Imprevista" Content="Imprevista" Foreground="Black" FontSize="14" Margin="70,0,0,0"/>
                                                            <RadioButton Name="Accidente" Content="Accidente" Foreground="Black" FontSize="14" Margin="70,0,0,0"/>
                                                        </StackPanel>
                                                    </Grid>

                                                </Border>
                                            </StackPanel>
                                            <!--
                                                columna que contiene información de los datos del turno
                                            -->
                                            <StackPanel Grid.Column="2" Margin="0,0,0,0">
                                                <Border BorderBrush="Black" BorderThickness="1" Margin="2.5,0,0,0">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <!--
                                                                contiene la etiqueta turnos
                                                            -->
                                                        <StackPanel Grid.Row="0">
                                                            <TextBlock Text="Turno" FontSize="14" Foreground="Black" Margin="0,0,0,0" HorizontalAlignment="Left"/>
                                                        </StackPanel >
                                                        <!--
                                                                contendrá los turnos
                                                            -->
                                                        <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                                            <RadioButton Name="A" Content="Turno A" FontSize="14" Foreground="Black" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                                            <RadioButton Name="B" Content="Turno B" FontSize="14" Foreground="Black" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                                            <RadioButton Name="C" Content="Turno C" FontSize="14" Foreground="Black" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                                            <RadioButton Name="D" Content="Turno D" FontSize="14" Foreground="Black" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                        <!--
                                                                Turno de día o de noche
                                                            -->
                                                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,66.5">
                                                            <RadioButton Name="dia" Content="Turno día" FontSize="14" Foreground="Black" Margin="100,10,0,0" VerticalAlignment="Center"/>
                                                            <RadioButton Name="noche" Content="Turno noche" FontSize="14" Foreground="Black" Margin="50,10,0,0" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Fin seccion 1-->

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Border Margin="0,0,0,0" BorderBrush="Black" BorderThickness="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Distribución de horas trabajadores" FontSize="30" Foreground="Black" HorizontalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <!--
                                            columna que contiene los datos del trabajador
                                        -->
                                        <StackPanel Grid.Column="0">
                                            <Border BorderBrush="Black" BorderThickness="1" Margin="0,5,0,0">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                                        <TextBlock Text="Trabajador" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                                                    </StackPanel>
                                                    <!--
                                                    sección del codigo del trabajador
                                                -->
                                                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <StackPanel Grid.Row="0">
                                                                <TextBlock Text="Código" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="150,0,0,0" FontWeight="Bold"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="1">
                                                                <ComboBox x:ConnectionId='28' x:Name="comboboxCodigo" Width="200" HorizontalAlignment="Left" Margin="80,0,69,0"                                                                                  />
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                    <!--
                                                    sección nombre del trabajador
                                                -->
                                                    <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                                        <Grid>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>
                                                            <StackPanel Grid.Row="0">
                                                                <TextBlock Text="Nombre" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="150,0,0,0" FontWeight="Bold"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Row="1">
                                                                <ComboBox x:ConnectionId='27' x:Name="comboboxNombre" Width="200" HorizontalAlignment="Left" Margin="80,0,0,0"                                                                                  />
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                    <!--
                                                    sección del store
                                                -->
                                                    <StackPanel Grid.Row="3" Margin="0,10,0,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="80"/>
                                                                <ColumnDefinition Width="2*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0">
                                                                <TextBlock Text="Store" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0,5,0,0" FontWeight="Bold"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="0,0,0,7">
                                                                <ComboBox x:ConnectionId='26' Name="comboboxStore" Width="100" HorizontalAlignment="Left" Margin="0,0,0,0"                              />
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>

                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                        <!--
                                        Columna de las horas trabajadas
                                    -->
                                        <StackPanel Grid.Column="1">
                                            <Border BorderBrush="Black" BorderThickness="1" Margin="2.5,5,2.5,0">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <!--
                                                    contiene titulo de la sección
                                                -->
                                                    <StackPanel Grid.Row="0">
                                                        <TextBlock Text="Distribución de tareas" FontSize="14" Foreground="Black" HorizontalAlignment="Left" Margin="0,0,0,0"/>
                                                    </StackPanel>
                                                    <!--
                                                    contiene la información de las horas trabajadas
                                                -->
                                                    <StackPanel Grid.Row="1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="2*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <!--
                                                            Contendrá el código y las horas trabajadas
                                                        -->
                                                            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <!--
                                                                    Contiene los codigos de trabajo
                                                                -->
                                                                    <StackPanel Grid.Row="0" Margin="0,10,0,0">
                                                                        <!--
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition/>
                                                                            <RowDefinition/>
                                                                        </Grid.RowDefinitions>
                                                                        <StackPanel Grid.Row="0" Margin="0,10,0,0">
                                                                            <TextBlock Text="Código componente" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,0" FontWeight="Bold"/>
                                                                        </StackPanel>
                                                                   
                                                                            Contiene el combobox del codigo de componentes
                                                                    
                                                                        <StackPanel Grid.Row="1" Margin="0,0,0,0">
                                                                            <TextBox Name="texboxCodigoComp" Width="150" Margin="0,0,0,0" IsReadOnly="True" Text="Indisponible"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                    -->
                                                                    </StackPanel>
                                                                    <!--
                                                                    Contiene las horas trabajadas
                                                                -->
                                                                    <StackPanel Grid.Row="1" Margin="0,10,0,10">
                                                                        <Grid>
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition/>
                                                                                <RowDefinition/>
                                                                                <RowDefinition/>
                                                                            </Grid.RowDefinitions>
                                                                            <StackPanel Grid.Row="0" Margin="0,20,0,0">
                                                                                <TextBlock Text="Horas trabajadas" FontSize="14" Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,0" FontWeight="Bold"/>
                                                                            </StackPanel>
                                                                            <!--
                                                                            Contiene los combobox de las horas trabajas
                                                                        -->
                                                                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                                                                <TextBlock Text="Hora" FontSize="14" Foreground="Black" Margin="70,0,0,0"/>
                                                                                <TextBlock Text="Minutos" FontSize="14" Foreground="Black" Margin="50,0,0,0"/>
                                                                            </StackPanel>
                                                                            <StackPanel Grid.Row="2" Margin="0,0,0,0">
                                                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                                                    <ComboBox x:ConnectionId='24' Name="horasTrabajadas" Width="80" Margin="50,0,0,0"                                                                                    />
                                                                                    <ComboBox x:ConnectionId='25' Name="minutosTrabajados" Width="80" Margin="10,0,0,0"                                  />
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </StackPanel>
